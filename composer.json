		"phpgt/http": "^1.1",
		"phpgt/json": "^1.2"
	},

	"require-dev": {
		"phpstan/phpstan": "^1.10",
		"phpunit/phpunit": "^10.5",
		"phpmd/phpmd": "^2.13",
		"squizlabs/php_codesniffer": "^3.7"
	},

	"autoload": {
